<?xml version="1.0" encoding="UTF-8" ?>

<pattern xmlns="http://se2018.polimi.it/pattern"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://se2018.polimi.it/pattern ../pattern.xsd">
    <name>Sun Catcher</name>
    <difficulty>3</difficulty>
    <grid>
        <cell row="1" col="2">
            <colourRestriction>BLUE</colourRestriction>
        </cell>
        <cell row="1" col="3">
            <valueRestriction>2</valueRestriction>
        </cell>
        <cell row="1" col="5">
            <colourRestriction>YELLOW</colourRestriction>
        </cell>
        <cell row="2" col="2">
            <valueRestriction>4</valueRestriction>
        </cell>
        <cell row="2" col="4">
            <colourRestriction>RED</colourRestriction>
        </cell>
        <cell row="3" col="3">
            <valueRestriction>5</valueRestriction>
        </cell>
        <cell row="3" col="4">
            <colourRestriction>YELLOW</colourRestriction>
        </cell>
        <cell row="4" col="1">
            <colourRestriction>GREEN</colourRestriction>
        </cell>
        <cell row="4" col="2">
            <valueRestriction>3</valueRestriction>
        </cell>
        <cell row="4" col="5">
            <colourRestriction>PURPLE</colourRestriction>
        </cell>
    </grid>
</pattern>