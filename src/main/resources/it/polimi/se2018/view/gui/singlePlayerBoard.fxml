<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0"
            prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.se2018.view.gui.SinglePlayerBoard">
    <GridPane layoutX="187.0" layoutY="187.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black;" GridPane.rowSpan="3">
            <top>
                <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="30.0" top="10.0"/>
                    </BorderPane.margin>
                    <Label fx:id="turnLabel" text="Label">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Label>
                    <Button mnemonicParsing="false" onMouseClicked="#endTurn" text="End Turn"/>
                </HBox>
            </top>
            <center>
                <BorderPane fx:id="playerPatternContainer" prefHeight="200.0" prefWidth="200.0"
                            BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black;" GridPane.columnIndex="2">
            <top>
                <Label text="Round Track" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <BorderPane.margin>
                        <Insets top="25.0"/>
                    </BorderPane.margin>
                </Label>
            </top>
            <center>
                <ScrollPane fx:id="scroll" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS"
                            BorderPane.alignment="CENTER">
                    <HBox fx:id="roundTrackContainer" maxWidth="${scroll.viewportBounds.width}"
                          minHeight="${scroll.viewportBounds.height}"/>
                </ScrollPane>
            </center>
        </BorderPane>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black;" GridPane.columnIndex="1">
            <top>
                <Label text="Draft Pool" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <BorderPane.margin>
                        <Insets top="25.0"/>
                    </BorderPane.margin>
                </Label>
            </top>
            <center>
                <HBox fx:id="draftPoolContainer" prefHeight="100.0" prefWidth="200.0"
                      BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black;" GridPane.columnIndex="1"
                    GridPane.columnSpan="2" GridPane.rowIndex="2">
            <top>
                <Label text="Tool Cards" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
            </top>
            <center>
                <HBox fx:id="toolCardContainer" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black;" GridPane.columnIndex="1"
                    GridPane.rowIndex="1">
            <top>
                <Label text="Private Objective Cards" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
            </top>
            <center>
                <HBox fx:id="privateCardContainer" prefHeight="100.0" prefWidth="200.0"
                      BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black;" GridPane.columnIndex="2"
                    GridPane.rowIndex="1">
            <top>
                <Label text="Public Objective Cards" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
            </top>
            <center>
                <HBox fx:id="publicCardContainer" prefHeight="100.0" prefWidth="200.0"
                      BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
    </GridPane>
</AnchorPane>
